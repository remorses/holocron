{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 2097152,
    "includes": [
      "cli/**",
      "cloudflare-tunnel/**",
      "contesto/**",
      "db/**",
      "docs-website/**",
      "docs/**",
      "mcp/**",
      "mcp-demo/**",
      "playwriter/**",
      "searchapi/**",
      "website/**",
      "*.json",
      "*.js",
      "*.ts",
      "*.tsx",
      "*.jsx"
    ],
    "experimentalScannerIgnores": [
      "*.astro",
      "docs/**",
      "fumadocs",
      "pnpm-lock.yaml",
      "**/framer-orin/**",
      "**/framer/**",
      "website/src/framer-orin/**",
      "docs-website/src/framer-orin/**",
      "website/src/framer/**",
      "docs-website/src/framer/**",
      "fumadocs/packages/mdx-remote/test/fixtures/*.mdx.js",
      "fumadocs/packages/mdx-remote/test/fixtures/*.mdx.production.js",
      "website/src/lib/spiceflow-generate-message.tsx",
      "docs-website/src/app.css",
      "fumadocs/apps/docs/app/global.css",
      "mcp-demo/app/globals.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
    "attributePosition": "auto"
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteProperties": "asNeeded",
      "attributePosition": "auto"
    }
  },
  "linter": {
    "enabled": false
  }
}
